{
  "name": "gprm-cli",
  "description": "GitHub Profile README Maker CLI",
  "version": "1.1.0",
  "license": "MIT",
  "author": "Technologeek",
  "homepage": "https://github.com/Technologeek/github-readme-maker-cli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Technologeek/github-readme-maker-cli.git"
  },
  "bugs": {
    "url": "https://github.com/Technologeek/github-readme-maker-cli/issues"
  },
  "types": "./dist/types/index.d.ts",
  "main": "./dist/lib/index.js",
  "module": "./dist/es/index.js",
  "bin": {
    "gprm": "./dist/lib/index.js"
  },
  "scripts": {
    "prepare": "modern build && simple-git-hooks",
    "dev": "modern dev",
    "build": "modern build",
    "build:watch": "modern build -w",
    "reset": "npx rimraf node_modules ./**/node_modules",
    "lint": "biome check",
    "change": "modern change",
    "bump": "modern bump",
    "pre": "modern pre",
    "change-status": "modern change-status",
    "gen-release-note": "modern gen-release-note",
    "release": "modern release",
    "new": "modern new",
    "upgrade": "modern upgrade"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@modern-js/module-tools": "2.60.2",
    "@types/node": "~16.11.7",
    "lint-staged": "~13.1.0",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.0.4"
  },
  "sideEffects": [],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "inquirer": "^12.0.0"
  }
}
